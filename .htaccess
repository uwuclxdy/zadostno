RewriteEngine On

# Health check
RewriteRule ^health$ index.php [L]

# Add your URL rewriting rules here
# RewriteRule ^api/(.*)$ api.php?route=$1 [L,QSA]

# Prevent access to sensitive files
<Files ~ "^\.">
    Order allow,deny
    Deny from all
</Files>

<Files ~ "\.env$">
    Order allow,deny
    Deny from all
</Files>
